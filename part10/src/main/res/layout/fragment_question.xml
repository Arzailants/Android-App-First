<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:padding="3dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/planet_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/largest_planet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/largest_planet"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/planet_quiz"
        app:layout_constraintBottom_toTopOf="@id/most_moons"
        android:layout_marginTop="13dp"/>

    <Button
        android:id="@+id/most_moons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/most_moons"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/largest_planet"
        android:layout_marginTop="13dp"/>

    <Button
        android:id="@+id/side_spinning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/side_spinning"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/most_moons"
        android:layout_marginTop="13dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>